html
    head
        title= 'Create Mocks'
    head
        link(rel='stylesheet', href='/css/base.css')
        link(rel='stylesheet', href='/lib/highlight.css')
        link(rel='stylesheet', href='/manageMockPanel/manageMockPanel.css')

        script(src='/lib/highlight.js')
        script(src='/lib/vkbeautify.js')
        script(src='/lib/jquery.js')

        script(src='/lib/apiBridge.js')

        script(src='/lib/uiNavigation.js')
        script(src='/lib/uiPreview.js')
        script(src='/lib/languageDetector.js')
        script(src='/lib/jquery.quicksearch.js')

        script(src='/lib/jquery.multi-select.js' type='text/javascript')
        link(href='/css/multi-select.css' media='screen' rel='stylesheet' type='text/css')

        script(src='/manageMockPanel/PaneMockList.js')
        script(src='/manageMockPanel/PaneCreateMock.js')
        script(src='/manageMockPanel/PaneShowRequests.js')
        script(src='/manageMockPanel/PaneTrackMocks.js')
        script(src='/manageMockPanel/PaneMockSetList.js')
        script(src='/manageMockPanel/PaneCreateMockSet.js')
        script(src='/manageMockPanel/PaneLog.js')
        script(src='/manageMockPanel/manageMockPanel.js')
    body
        nav(class="main" data-default-pane="PaneMockList")
            div
                button(data-pane="PaneShowRequests") Requests
                button(data-pane="PaneMockList") Mocks
                button(data-pane="PaneMockSetList") Sets
                button(data-pane="PaneLog") Logs
            div(class="tools")
                button(data-tool="OpenWindow" data-href="/options/options.html") Logs
                button(data-tool="OpenWindow" data-href="/manageMockPanel/manageMockPanel.html") Logs
        nav(class="sub" data-parent-nav="PaneMockList")
            button(data-pane="PaneMockList") List
            button(data-pane="PaneCreateMock") Create
            button(data-pane="PaneTrackMocks") Track
        nav(class="sub" data-parent-nav="PaneMockSetList")
            button(data-pane="PaneMockSetList") List
            button(data-pane="PaneCreateMockSet") Create
        div(id="previewWindow")
            nav(id="previewLanguage")
                button(data-language="xml") XML
                button(data-language="json") JSON
                button(data-language="") Plain Text
            button(class="closeButton" data-action="close") X
            pr
                code
        div(id="stage")
            div(id="PaneShowRequests")
                h1 "Requests"
                button(data-action="deleteRequests") Clear Requests
                table(id="requestList")
                    thead
                    tr
                        th Uri
                        th Method
                        th StatusCode
                        th Info
                        th(colspan="2")
                    tbody
        div(id="PaneMockList")
            h1 Mocklist
            input(type="text" id="mockListCountTrackMockField" value = '5')
            button(data-action="trackMocks") Track Mocks
            table(id="mockList")
                thead
                tr
                    th Enabled
                    th Name
                    th Description
                    th StatusCode
                    th Uri
                    th Activated
                    th(colspan="3") Tools
                tbody
        div(id="PaneCreateMock")
            h1 Create/Update Mock
            form(id="formManuallyCreate" method="POST" action="#")
                table
                    tr
                        td
                            label(for="form_name") Name
                        td
                            input(id="form_name" name="name")
                    tr
                        td
                            label(for="form_description") Description
                        td
                            textarea(id="form_description" name="description")
                    tr
                        td
                            label(for="form_statusCode") Status Code
                        td
                            input(id="form_statusCode" name="statusCode")
                    tr
                    td
                        label(for="form_requestUri") Request URI
                    td
                        input(id="form_requestUri" name="requestUri")
                    tr
                        td
                            label(for="form_requestMethod") Request Method
                        td
                        select(id="form_requestMethod" name="requestMethod")
                        option(value="GET") GET
                        option(value="POST") POST
                        option(value="PUT") PUT
                        option(value="DELETE") DELETE
                    tr
                        td
                            label(for="form_requestBody") Request Body
                        td
                            textarea(id="form_requestBody" name="requestBody")
                    tr
                        td
                            label(for="form_responseBody") Response Body
                        td
                            textarea(id="form_responseBody" name="responseBody")
                    tr
                        td
                            label Activate Mock
                        td
                            input(id="activateMockCheckbox" type="checkbox")
                    tr
                        td
                        td
                            button(id="form_submit") Submit
                            button(data-action="apply") Apply
                            button(data-action="delete" id="deleteMockButton") Delete
                input(id="form_id" type="hidden")
        div(id="PaneTrackMocks")
            h1 Tracked Mocks
            table
                thead
                tr
                    th Order
                    th Name
                    th Description
                    th Tools
                tbody
        div(id="PaneMockSetList")
            h1 Mock Sets
            button(data-action="activateAllSets") Activate all
            button(data-action="deactivateAllSets") Deactivate all
            table(id="mockSetList")
                thead
                tr
                    th Name
                    th Description
                    th(colspan="3") Tools
                tbody
        div(id="PaneCreateMockSet")
            h1 Create/Update Mock Set
            form(id="formManuallyCreateMockSet" method="POST" action="#")
                table
                    tr
                        td
                            label(for="set_form_name") Name
                        td
                            input(id="set_form_name" name="name")
                    tr
                        td
                            label(for="set_form_description") Description
                        td
                            textarea(id="set_form_description" name="description")
                    tr
                        td
                            label Mocks
                        td
                            select(multiple="multiple"  id="mockSetSelecter" name="mockSetSelecter[]")
                    tr
                        td
                        td
                            button(id="set_form_submit") Submit
                input(id="set_form_id" type="hidden")
        div(id="PaneLog")
        h1 Log
        div(class="consoleLog")